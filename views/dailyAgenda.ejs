    confirmButtonColor: '#3085d6',
    cancelButtonColor: '#d33',
    confirmButtonText: 'نعم قم بالحذف!'
  }).then((result) => {
    if (result.isConfirmed) {
let data = {
  id:id
}
      axios({
        method:'post',
        data  : data,
        url   : '/accounting/dailyAgenda/DeleteInvoice'
